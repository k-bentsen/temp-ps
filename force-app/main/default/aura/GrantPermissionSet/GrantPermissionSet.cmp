<aura:component implements="flexipage:availableForAllPageTypes" controller="PermissionSetGrantMgrController">
    <aura:attribute name="permSets" type="PermissionSetGrantMgrController.PSWrapper[]" access="public" description="Store Permission Sets retreived from server"/>
    <aura:attribute name="btnDisabled" type="Boolean" default="true"/>
    <aura:attribute name="missingFlds" type="String[]" default=""/>
    <aura:attribute name="renderPopover" type="Boolean" default="false"/>
    <aura:attribute name="selectedPS" type="PermissionSetGrantMgrController.PSWrapper"/>
    <lightning:tabset class="slds-p-around_small">
        <lightning:tab label="Create Grant" id="cg" onactive="{!c.onInit}">
            <lightning:spinner aura:id="grantSpinner" size="medium" alternativeText="Saving..." class="slds-hide"/>
            <lightning:recordEditForm aura:id="grantEditForm" objectApiName="Permission_Set_Grant__c">
                <lightning:inputField fieldName="User__c" aura:id="userId" required="true" onchange="{!c.userUpdate}"/>
                <lightning:select label="Permission Set" required="true" onchange="{!c.inputChange}" value="{!v.selectedPS}">
                    <option value="">select...</option>
                    <aura:iteration items="{!v.permSets}" var="ps">
                        <option disabled="{!ps.disabled}" value="{!ps.permSetId}" selected="{!ps.permSetId==v.selectedPS}">{!ps.displayText}</option>
                    </aura:iteration>
                </lightning:select>
                <div class="slds-grid">
                    <div class="slds-col slds-size_1-of-2">
                        <lightning:inputField fieldName="Duration__c" aura:id="dur" onchange="{!c.inputChange}"/>
                    </div>
                    <div class="slds-col slds-size_1-of-2">
                        <lightning:inputField fieldName="Duration_Unit__c" aura:id="durUnit" onchange="{!c.inputChange}"/>
                    </div>
                </div>
                <lightning:button class="slds-m-top_small" variant="brand" iconName="utility:new" disabled="{!v.btnDisabled}" type="submit" label="Grant" onclick="{!c.insertGrant}"/>
            </lightning:recordEditForm>
        </lightning:tab>
        <lightning:tab label="View Grants" id="vg">

        </lightning:tab>
    </lightning:tabset>
</aura:component>